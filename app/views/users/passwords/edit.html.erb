<div id="signup_container">

		<div class= "left_body_signup">
			<div id="sign_up_pw">

		<h2 class="left_title">Change your password</h2>

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
		  <%= devise_error_messages! %>
		  <%= f.hidden_field :reset_password_token %>

		  <%= f.password_field :password, :placeholder => "New Password", :class => "field_for" %>

		  <%= f.password_field :password_confirmation, :placeholder => "Confirm New Password", :class => "field_for" %>

		  <%= f.submit "Change my password", :class => "btn_show" %>
		<% end %>
		
		</div>
	</div>		

	<div class ="right_body_signup">
		<span class="devise_signin"><%= render :partial => "devise/shared/links" %></span>
	</div>
</div>